<%- model_class = Participant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @participant.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:authorization_key) %>:</strong></dt>
  <dd><%= @participant.authorization_key %></dd>
  <dt><strong><%= model_class.human_attribute_name(:authorization_password) %>:</strong></dt>
  <dd><%= @participant.authorization_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @participant.name %></dd>
</dl>

<p><b>Here is the access link to the quiz session : </b></p>

<div class="panel panel-default nested-fields answer-container">
  <div class="panel-body">
  <% url = quiz_session_path(@participant) %>
  <%= link_to url, url %>
  </div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              session_path(@participant.session), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_participant_path(@participant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              participant_path(@participant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
